<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shrinker</title>
  </head>
  <body>
    <h1>URL Shrinker</h1>
    <form action="/shorten" method="POST">
      <label for="fullUrl">Url</label>
      <input type="url" name="fullUrl" id="fullUrl" />
      <button type="submit">Shrink</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach(url => { %>
        <tr>
          <td>
            <a href="<%= url.fullUrl %>"><%= url.fullUrl %></a>
          </td>
          <td>
            <a href="/<%= url.shortUrl %>"><%= url.shortUrl %></a>
        </td>
          <td><%= url.clicks %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
